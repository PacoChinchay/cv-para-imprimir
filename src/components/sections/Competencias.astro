---
import SectionContainer from "@/components/SectionContainer.astro";
import { competencias } from "@cv"
---

<SectionContainer title="Competencias">
  <ul>
    {
      competencias.map(({ name }) => {
        return (
          <li>
            <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
</SectionContainer>
<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  li {
    border-radius: 6px;
    background: #ddd;
    color: black;
    font-size: .8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
